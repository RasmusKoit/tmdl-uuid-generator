{
  "name": "tmdl-uuid-generator",
  "displayName": "TMDL UUID Generator",
  "description": "Creates UUID on save from a variable or with a click of your mouse",
  "version": "0.0.1",
  "publisher": "Rasmus Koit",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "git@github.com:RasmusKoit/tmdl-uuid-generator.git"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:tmd",
    "onLanguage:dax"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tmdl-uuid-generator.generateUUID",
        "title": "Generate UUID"
      },
      {
        "command": "tmdl-uuid-generator.generateAllUUID",
        "title": "Generate all UUIDs"
      }
    ],
    "submenus": [
      {
        "id": "tmdl.submenu",
        "label": "TMDL"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "tmdl.submenu",
          "group": "tmdl"
        }
      ],
      "tmdl.submenu": [
        {
          "command": "tmdl-uuid-generator.generateUUID",
          "group": "tmdl"
        },
        {
          "command": "tmdl-uuid-generator.generateAllUUID",
          "group": "tmdl"
        }
      ]
    },
    "configuration": {
      "title": "TMDL UUID Generator",
      "properties": {
        "generateOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Generate all UUIDs on save"
        },
        "stringToReplace": {
          "type": "string",
          "default": "$UUID",
          "description": "String to replace with UUIDv4. MUST START WITH $."
        }
      }
    },
    "keybindings": [
      {
        "command": "tmdl-uuid-generator.generateUUID",
        "key": "ctrl+k g",
        "mac": "cmd+k g",
        "when": "editorTextFocus"
      },
      {
        "command": "tmdl-uuid-generator.generateAllUUID",
        "key": "ctrl+k shift+g",
        "mac": "cmd+k shift+g",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "tmd",
        "extensions": [
          ".dax",
          ".tmd"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/uuid": "^9.0.1",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  }
}
